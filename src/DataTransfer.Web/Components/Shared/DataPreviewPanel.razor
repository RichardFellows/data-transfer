@using DataTransfer.Web.Models

@if (Preview == null)
{
    <div class="alert alert-info">
        <em>Select a table or file to see preview</em>
    </div>
}
else if (!Preview.Columns.Any())
{
    <div class="alert alert-warning">
        <em>No schema information available</em>
    </div>
}
else
{
    <div class="data-preview">
        <!-- Schema Information -->
        <div class="card mb-3">
            <div class="card-header">
                <strong>Schema</strong>
                @if (Preview.TotalRowCount.HasValue)
                {
                    <span class="text-muted float-end">
                        Total Rows: @Preview.TotalRowCount.Value.ToString("N0")
                    </span>
                }
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Column Name</th>
                                <th>Data Type</th>
                                <th>Nullable</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var column in Preview.Columns)
                            {
                                <tr>
                                    <td><code>@column.Name</code></td>
                                    <td><span class="badge bg-secondary">@column.DataType</span></td>
                                    <td>
                                        @if (column.IsNullable)
                                        {
                                            <span class="badge bg-warning text-dark">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sample Data -->
        @if (Preview.Rows.Any())
        {
            <div class="card">
                <div class="card-header">
                    <strong>Sample Data</strong>
                    <span class="text-muted float-end">Showing @Preview.Rows.Count row(s)</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped table-hover">
                            <thead>
                                <tr>
                                    @foreach (var column in Preview.Columns)
                                    {
                                        <th>@column.Name</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in Preview.Rows)
                                {
                                    <tr>
                                        @foreach (var column in Preview.Columns)
                                        {
                                            <td>
                                                @if (row.TryGetValue(column.Name, out var value))
                                                {
                                                    @if (value == null)
                                                    {
                                                        <em class="text-muted">NULL</em>
                                                    }
                                                    else
                                                    {
                                                        @FormatValue(value)
                                                    }
                                                }
                                                else
                                                {
                                                    <em class="text-muted">-</em>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <em>No sample data available (table may be empty)</em>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public DataPreview? Preview { get; set; }

    private string FormatValue(object value)
    {
        return value switch
        {
            DateTime dt => dt.ToString("yyyy-MM-dd HH:mm:ss"),
            DateTimeOffset dto => dto.ToString("yyyy-MM-dd HH:mm:ss zzz"),
            decimal dec => dec.ToString("N2"),
            double dbl => dbl.ToString("N2"),
            float flt => flt.ToString("N2"),
            byte[] bytes => $"<binary: {bytes.Length} bytes>",
            _ => value.ToString() ?? string.Empty
        };
    }
}
